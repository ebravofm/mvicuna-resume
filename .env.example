# Private Key for accessing private version of the résumé
# Generate a secure code (e.g., a UUID or using a password generator)
PRIVATE_KEY=your-private-key-here

# MailerSend Configuration for CV Request Form
# Get your API key from https://www.mailersend.com/
MAILERSEND_API_KEY=your-mailersend-api-key

# Email address that will send CV request notifications
# Must be a verified sender in your MailerSend account
MAILERSEND_SENDER_EMAIL=noreply@yourdomain.com

# Display name for the sender email (optional)
MAILERSEND_SENDER_NAME=CV Request

# Your email address where CV request notifications will be sent
MAILERSEND_RECIPIENT_EMAIL=your-email@example.com
